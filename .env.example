# --- App Configuration ---
APP_NAME=NodeLaravel
APP_ENV=production  # 环境: production/development/testing
APP_KEY=            # 用于 Crypto 模块的 32 位随机字符串
APP_IV=            # 用于 Crypto 模块的 16 位随机字符串
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_PORT=3000

# --- HTTP Configuration ---
TIMEOUT=3000
HTTP_PORT=80
HTTPS_PORT=443

# --- Cluster Configuration ---
# 开启集群模式: true/false
CLUSTER_ENABLED=false
# 工作进程数: auto (CPU 核心数) 或 具体数字
CLUSTER_WORKERS=auto

# --- Security Configuration ---
REQUEST_ENCRYPT=false
RETURN_ENCRYPT=false
TOKEN_TIME=1800
TIME_ZONE=Asia/Shanghai

# --- Database Configuration ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=node_laravel
DB_USERNAME=root
DB_PASSWORD=secret
DB_PREFIX=ts_

# --- WebSocket Configuration ---
WS_PORT=6001
WS_PATH=/socket.io

# --- Frontend html | 3001 ---
FRONT_PORT=html

# --- Cache Configuration ---
CACHE_DRIVER=file

# --- File Storage ---
# Sharp 处理后的资源访问路径
STORAGE_PATH=./public/uploads