# --- App Configuration ---
APP_NAME=NodeLaravel
APP_ENV=production  # 环境: production/development/testing
APP_KEY=            # 用于 Crypto 模块的 32 位随机字符串
APP_IV=            # 用于 Crypto 模块的 16 位随机字符串
APP_DEBUG=false
APP_URL=localhost
APP_PORT=3000

# --- HTTP Configuration ---
TIMEOUT=3000
HTTP_PORT=80

# --- HTTPS Configuration ---
HTTPS_PORT=443
SSL_ENABLED=false
SSL_KEY_PATH=../certs/server.key
SSL_CERT_PATH=../certs/server.crt

# --- Cluster Configuration ---
# 开启集群模式: true/false
CLUSTER_ENABLED=false
# 工作进程数: auto (CPU 核心数) 或 具体数字
CLUSTER_WORKERS=auto

# --- Security Configuration ---
VERIFY_SIGNATURE=false
REQUEST_ENCRYPT=false
RETURN_ENCRYPT=false
TOKEN_TIME=1800
TIME_ZONE=Asia/Shanghai

# --- Database Configuration ---
# mysql ｜ sqlite
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
# DB_CONNECTION 选择 mysql 时用数据库名 如果 DB_CONNECTION 选择 sqlite 需要使用数据库地址，如： ./storage/db/db.sqlite
DB_DATABASE=node_laravel
# DB_DATABASE=./storage/db/db.sqlite
DB_USERNAME=root
DB_PASSWORD=secret
DB_PREFIX=ts_

# --- WebSocket Configuration ---
WS_PORT=6001
WS_PATH=/socket.io
WS_ENABLED=false

# --- Frontend nuxt | 3001 ---
FRONT_PORT=3001

# --- Cache Configuration ---
# file | redis ｜ sqlite
CACHE_DRIVER=file
CACHE_HOST=127.0.0.1
CACHE_PORT=6379
CACHE_PASSWORD=
CACHE_PATH=./storage/cache
CACHE_PREFIX=wb_
CACHE_DATABASE=./storage/cache/cache.sqlite

# --- File Storage ---
# Sharp 处理后的资源访问路径
STORAGE_PATH=./storage
UPLOAD_PATH=./storage/uploads